<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" client="site" method="upgrade" version="5.0">
    <name>mod_nxpeasyforms</name>
    <author>nexusplugins.com</author>
    <authorEmail>support@nexusplugins.com</authorEmail>
    <authorUrl>https://nexusplugins.com</authorUrl>
    <copyright>Copyright (C) 2024-2025 nexusplugins.com. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <creationDate>2026-02-08</creationDate>
    <version>1.0.9</version>
    <description>MOD_NXPEASYFORMS_XML_DESCRIPTION</description>
    <namespace path="src">Joomla\Module\Nxpeasyforms</namespace>

    <files>
        <folder module="mod_nxpeasyforms">services</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
        <filename>index.html</filename>
    </files>

    <languages>
        <language tag="en-GB">language/en-GB/mod_nxpeasyforms.ini</language>
        <language tag="en-GB">language/en-GB/mod_nxpeasyforms.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="form_id"
                    type="sql"
                    query="SELECT id AS value, title AS text FROM #__nxpeasyforms_forms WHERE active = 1 ORDER BY title ASC"
                    key_field="value"
                    value_field="text"
                    label="MOD_NXPEASYFORMS_FIELD_FORM_LABEL"
                    description="MOD_NXPEASYFORMS_FIELD_FORM_DESC"
                    required="true"
                    filter="integer"
                    header="MOD_NXPEASYFORMS_FIELD_FORM_SELECT"
                />

                <field
                    name="show_empty_message"
                    type="radio"
                    label="MOD_NXPEASYFORMS_FIELD_SHOW_EMPTY_LABEL"
                    description="MOD_NXPEASYFORMS_FIELD_SHOW_EMPTY_DESC"
                    layout="joomla.form.field.radio.switcher"
                    default="1"
                    filter="integer"
                    >
                    <option value="0">JHIDE</option>
                    <option value="1">JSHOW</option>
                </field>
            </fieldset>

            <fieldset name="advanced">
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    class="form-select"
                    validate="moduleLayout"
                />

                <field
                    name="moduleclass_sfx"
                    type="textarea"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    rows="3"
                    validate="CssIdentifier"
                />
            </fieldset>
        </fields>
    </config>
</extension>
