<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade" version="5.0">
    <name>COM_NXPEASYFORMS</name>
    <title>NXP Easy Forms</title>
    <creationDate>2025-09-22</creationDate>
    <author>nexusplugins.com</author>
    <authorUrl>https://nexusplugins.com</authorUrl>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <version>1.0.7</version>
    <description>COM_NXPEASYFORMS_XML_DESCRIPTION</description>

    <namespace path="src">Joomla\Component\Nxpeasyforms</namespace>

    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>

    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <!-- Site files (frontend) -->
    <files folder="site">
        <folder>services</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
        <filename>index.html</filename>
    </files>

    <languages folder="language">
        <language tag="en-GB">en-GB/com_nxpeasyforms.ini</language>
    </languages>

    <media destination="com_nxpeasyforms" folder="media">
        <folder>assets</folder>
        <folder>css</folder>
        <folder>js</folder>
        <filename>index.html</filename>
        <filename>joomla.asset.json</filename>
        <filename>manifest.json</filename>
    </media>

    <!-- API files for REST endpoints -->
    <api>
        <files folder="api">
            <folder>services</folder>
            <folder>src</folder>
            <filename>index.html</filename>
        </files>
    </api>

    <administration>
        <menu link="index.php?option=com_nxpeasyforms&amp;view=forms">COM_NXPEASYFORMS_MENU</menu>
        <submenu>
            <menu view="forms">COM_NXPEASYFORMS_SUBMENU_FORMS</menu>
            <menu view="submissions">COM_NXPEASYFORMS_SUBMENU_SUBMISSIONS</menu>
        </submenu>

        <files folder="admin">
            <folder>services</folder>
            <folder>sql</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
            <folder>models</folder>
            <folder>forms</folder>
            <folder>language</folder>
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>index.html</filename>
        </files>

        <config>config.xml</config>
    </administration>

    <updateservers>
        <server type="extension" priority="1" name="NXP Easy Forms updates">https://updates.nexusplugins.com/joomla/components/com_nxpeasyforms/updates.xml</server>
    </updateservers>
</extension>
