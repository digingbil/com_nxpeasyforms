<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="jform">
        <fieldset name="basic" label="COM_NXPEASYFORMS_FIELDSET_FORM_DETAILS">
            <field
                name="id"
                type="hidden"
            />

            <field
                name="title"
                type="text"
                label="JGLOBAL_TITLE"
                description="COM_NXPEASYFORMS_FIELD_TITLE_DESC"
                required="true"
                filter="string"
            />

            <field
                name="active"
                type="radio"
                label="JSTATUS"
                class="btn-group btn-group-yesno"
                default="1"
            >
                <option value="1">JENABLED</option>
                <option value="0">JDISABLED</option>
            </field>
        </fieldset>

        <field
            name="fields"
            type="hidden"
            filter="raw"
        />

        <field
            name="settings"
            type="hidden"
            filter="raw"
        />
    </fields>
</form>
